<Window x:Class="ScreenCaptureNow.WindowOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenCaptureNow"
        mc:Ignorable="d"
        Title="Screen Capture Overlay"
        SnapsToDevicePixels="True"
        Topmost="True"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="Transparent">

    <Border CornerRadius="10" Opacity="0.8" Margin="0,0,0,120" VerticalAlignment="Bottom" HorizontalAlignment="Center">
        <Border.Background>
            <SolidColorBrush Color="#1D1D1D"/>
        </Border.Background>
        <StackPanel Orientation="Horizontal">
            <Ellipse Margin="5" Fill="#CD1928" Width="20" Height="20"/>
            <TextBlock Name="textblock_Timing" Margin="0,0,5,0" FontSize="14" VerticalAlignment="Center" Foreground="White" Text="1s"/>
        </StackPanel>
    </Border>
</Window>